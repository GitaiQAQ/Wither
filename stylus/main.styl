@font-face
  font-family: 'iconfont';  /* project id 212161 */
  src: url('//at.alicdn.com/t/font_v6vg90z2q2k5ipb9.eot');
  src: url('//at.alicdn.com/t/font_v6vg90z2q2k5ipb9.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_v6vg90z2q2k5ipb9.woff') format('woff'),
  url('//at.alicdn.com/t/font_v6vg90z2q2k5ipb9.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_v6vg90z2q2k5ipb9.svg#iconfont') format('svg');

.iconfont
  font-family: 'iconfont'

.right
    float: right

body
  font-family: "Roboto", Arial, Helvetica, sans-serif;

img
  max-width: 100%

a
  color: inherit
  text-decoration: none

@import "_partial/header"
@import "_partial/container"

.banner
  height: 100vh
  color: white
  // https://i.ytimg.com/vi/FpnN_tnO9ok/maxresdefault.jpg
  // https://i.ytimg.com/vi/uLqKvzJkKE8/maxresdefault.jpg
  background-image: url(https://i.ytimg.com/vi/7xOXWTMjoec/maxresdefault.jpg)
  background-size: cover
  background-attachment: fixed
  .overlay
    height: 100%
    background-color: rgba(0,0,0,.3)
    .intro
      position: absolute;
      text-align: center;
      width: 100%;
      top: 50%;
      margin-top: -7em;
  svg
    path
      stroke-dasharray: 100;
      fill: none;
      stroke: white;
      stroke-width: 30;
      stroke-dashoffset: 1000;
      // animation: dash 5s linear infinite;
    @keyframes dash
      to
        stroke-dashoffset: 0;